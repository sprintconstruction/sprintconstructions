<script>
    $(window).scroll(function () {
        var threshold = 50;
        $("#test").html($(window).scrollTop());
        if ($(window).scrollTop() >= threshold)
            $('#sidebar').addClass('fixed');
        else
            $('#sidebar').removeClass('fixed');
        var check = $("#content").height() - $("#sidebar").height() - 21;
        if ($(window).scrollTop() >= check)
            $('#sidebar').addClass('bottom');
        else
            $('#sidebar').removeClass('bottom');
    });

      //    hide show job subcategory
      $(document).ready(function () {
        $(".advert").not("#job").hide();
        $('#job_link').click(function () {
            $(".advert").not("#job").hide();
            $('#job').show();
        });
        $('#business_link').click(function () {
            $(".advert").not("#business").hide();
            $('#business').show();
        });
        $('#scholarship_link').click(function () {
            $(".advert").not("#scholarship").hide();
            $('#scholarship').show();
        });
        $('#consultancy_link').click(function () {
            $(".advert").not("#consultancy").hide();
            $('#consultancy').show();
        });
        $('#grants_link').click(function () {
            $(".advert").not("#grants").hide();
            $('#grants').show();
        });
        $('#training_link').click(function () {
            $(".advert").not("#training").hide();
            $('#training').show();
        });
    });
</script>
